{
  "manifest_version": 3,
  "name": "My Todo Extension",
  "version": "1.0",
  "description": "Create and manage a todo list for specific webpages",
  "icons": {
    "16": "image/icon16.png",
    "32": "image/icon32.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image/icon16.png",
      "32": "image/icon32.png",
      "48": "image/icon48.png",
      "128": "image/icon128.png"
    }
  },
  "permissions": ["storage", "activeTab"]
}

